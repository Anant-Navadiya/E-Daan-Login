<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Form"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/firasanscondensed"
            android:textColor="@color/black"
            ></TextView>

    <EditText
        android:id="@+id/donated_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/ubunturegular"
        android:hint="Your Name"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="#8E8B8B"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/donated_contact_no"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/ubunturegular"
        android:hint="Your Contact No."
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="#8E8B8B"
        android:inputType="number"/>
    <EditText
        android:id="@+id/donated_location"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/ubunturegular"
        android:hint="Your Location"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="#8E8B8B"
        android:inputType="textCapSentences"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="40dp">


            <RadioButton
                android:id="@+id/donated_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/ubunturegular"
                android:theme="@style/RadioButtonStyle"
                android:buttonTint="@color/black"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="NGO" />

            <RadioButton
                android:id="@+id/donated_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:fontFamily="@font/ubunturegular"
                android:theme="@style/RadioButtonStyle"
                android:textSize="20dp"
                android:text="Individual" />

        </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/donated_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/textfield"
            android:fontFamily="@font/ubunturegular"
            android:hint="Accepter's Email"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#8E8B8B"
            android:inputType="textCapSentences"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp">
        <CheckBox
            android:id="@+id/donated_checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Food"
            android:fontFamily="@font/ubunturegular"
            android:theme="@style/MyCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/donated_checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="Books"
            android:fontFamily="@font/ubunturegular"
            android:theme="@style/MyCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <CheckBox
            android:id="@+id/donated_checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="Cloths"
            android:fontFamily="@font/ubunturegular"
            android:theme="@style/MyCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
    </LinearLayout>

        <Button
            android:id="@+id/donated_Upload_image"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/image_button_background"
            android:drawableStart="@drawable/ic_baseline_image_24"
            android:paddingStart="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ubunturegular"
       android:text="Upload Image"
            ></Button>

        <Button
            android:id="@+id/donated_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:paddingStart="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/ubunturegular"
            android:text="Submit"
            ></Button>

    </LinearLayout>
</RelativeLayout>