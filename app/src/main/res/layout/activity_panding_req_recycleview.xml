<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/recycle_background"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:weightSum="2"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasanscondensed"
                android:gravity="center"
                android:text="Regarding : "
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/description"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubunturegular"
                android:gravity="start"
                android:text="Your had taken donation"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:weightSum="2"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasanscondensed"
                android:gravity="center"
                android:text="From : "
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubunturegular"
                android:gravity="start"
                android:text="Anant Navadiya"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </TableRow>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/ic_baseline_arrow_circle_right_24"></ImageView>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:weightSum="2"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasanscondensed"
                android:gravity="center"
                android:text="Date : "
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubunturegular"
                android:gravity="start"
                android:text="07/11/2002"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </TableRow>


    </LinearLayout>


</RelativeLayout>