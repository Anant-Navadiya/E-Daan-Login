<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/profile_foreground"></ImageView>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Name : "
                android:textSize="22dp"
                android:fontFamily="@font/firasanscondensed"/>

            <TextView
                android:id="@+id/User_name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:text="Nishant Kachhadiya"
                android:gravity="end"
                android:fontFamily="@font/ubunturegular"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Contact No. : "
                android:textSize="22dp"
                android:fontFamily="@font/firasanscondensed"/>

            <TextView
                android:id="@+id/User_contact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:text="9898989898"
                android:gravity="end"
                android:fontFamily="@font/ubunturegular"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Email : "
                android:textSize="22dp"
                android:fontFamily="@font/firasanscondensed"/>

            <TextView
                android:id="@+id/User_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:text="nkachhadiya@gmail.com"
                android:gravity="end"
                android:fontFamily="@font/ubunturegular"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:weightSum="2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            >

        <Button
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:text="Update"
            android:gravity="center"
            android:fontFamily="@font/ubunturegular"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
android:textColor="#219EBC"
                android:background="@drawable/button_border"
                android:text="SignOut"
                android:gravity="center"
                android:fontFamily="@font/ubunturegular"/>
        </TableRow>
    </LinearLayout>

</RelativeLayout>